<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
  
    <item android:state_pressed="false">
        
<shape>
    <solid android:color="#fff"/>
    <corners android:radius="12dp"/>
     <gradient
    android:type="linear"
    android:angle="135"
    android:startColor="#016f08"
    android:endColor="#a3d999" />
     
     <stroke 
         android:width="3dp"
         android:color="#eee"
         />

</shape>
       
    </item>
    
     
     <item android:state_pressed="true">
    <shape>
    <solid android:color="#ddd"/>
    <corners android:radius="15dp"/>
    
    <gradient
    android:type="linear"
    android:angle="135"
        android:endColor="#016f08"
        android:startColor="#a3d999"  />
 	</shape>
 	 
     <stroke 
         android:width="3dp"
         android:color="#eee"
         />
       
        
    </item>
    
</selector>


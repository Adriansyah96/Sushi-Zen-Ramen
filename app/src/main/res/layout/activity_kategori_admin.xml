<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:scrollbars="none"
    android:background="@drawable/coba1"
    tools:context=".admin.KategoriAdmin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">



        <Button
            android:id="@+id/btnadminmakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Masukan Makanan"/>

        <Button
            android:id="@+id/btnadminminuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Masukan Minuman"/>

        <Button
            android:id="@+id/btnadmindisert"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Masukan Disert"/>



            <Button
                android:id="@+id/btnorderadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Admin"
                android:background="@drawable/btn"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="150dp"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnlihatdataorder"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Lihat Order"
                android:textSize="25dp"/>

        </LinearLayout>






</ScrollView>
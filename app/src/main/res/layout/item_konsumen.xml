<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardDataKonsumen"
    android:layout_width="match_parent"
    android:background="@drawable/coba1"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/coba1"
    android:padding="10dip">
    <ImageView
        android:id="@+id/img_itemkonsumen"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tv_namaobjectkonsumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:layout_gravity="right"/>



        <TextView
            android:id="@+id/status_konsumen"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="TERSEDIA"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/gradient"
            android:textStyle="bold"/>
    </RelativeLayout>



</LinearLayout>
</android.support.v7.widget.CardView>

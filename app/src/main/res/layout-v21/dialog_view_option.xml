        android:textStyle="bold"
        />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_admindapur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin dapur"
        android:background="@drawable/btn"

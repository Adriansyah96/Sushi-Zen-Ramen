<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardDataminuman"
    android:layout_width="match_parent"
    android:background="@drawable/coba"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coba"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_itemadminminuman"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/tv_namaobjectminuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_status_admin_minuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:text="Status"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtstatus_minuman_admin"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="TERSEDIA"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/coba1"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

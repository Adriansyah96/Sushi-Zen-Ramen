<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coba"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coba"
    android:orientation="vertical"
    tools:context=".admin.adminmakanan.Create">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_mainminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:padding="10dp"
        android:background="@drawable/coba"
        card_view:cardBackgroundColor="@color/background_material_light"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/coba"
            android:padding="10dp">



        <TextView
        android:id="@+id/txtadmminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Data Minuman"
        android:textSize="30sp"
            android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <EditText
        android:id="@+id/edtnomejaminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:inputType="none"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
        android:id="@+id/edtnamaminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:gravity="center"
                android:inputType="none"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
        android:id="@+id/edthargaminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga "
        android:gravity="center"
                android:inputType="number"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
            </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_choose_fileminuman"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Choose File"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnsubmitminuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="25sp"
        android:background="@drawable/btn"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/img_adm"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

</LinearLayout>
</ScrollView>

